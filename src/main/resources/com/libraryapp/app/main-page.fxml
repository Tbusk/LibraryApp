<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.libraryapp.app.MainPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" style="-fx-padding: 20px">
        <Label fx:id="headerText" text="Library Desktop App" />
    </VBox>
    <TableView fx:id="booksTable">
        <columns>
            <TableColumn fx:id="title" text="title" prefWidth="300">
            </TableColumn>
            <TableColumn fx:id="author" text="Author" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="author"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="averageRating" text="Average Rating" prefWidth="200">
            </TableColumn>
            <TableColumn fx:id="originalPublicationYear" text="Original Publication Year" prefWidth="200">
            </TableColumn>
            <TableColumn fx:id="ISBN13" text="ISBN13" prefWidth="200">

            </TableColumn>
        </columns>

    </TableView>

</VBox>
